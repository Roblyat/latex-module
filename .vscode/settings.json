{
  "latex-workshop.latex.outDir": "%DIR%/build",

  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "/usr/local/texlive/2025/bin/x86_64-linux/latexmk",
      "args": [
        "-r",
        "%DIR%/latexmkrc",
        "-shell-escape",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ]
    }
  ],

  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (build to ./build)",
      "tools": ["latexmk"]
    }
  ],

  "latex-workshop.latex.build.forceRecipeUsage": true,
  "latex-workshop.latex.recipe.default": "latexmk (build to ./build)",
  "latex-workshop.latex.autoBuild.run": "onSave",

  "latex-workshop.latex.rootFile.useSubFile": false,
  "latex-workshop.latex.rootFile.doNotPrompt": true,

  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.bcf",
    "*.blg",
    "*.fdb_latexmk",
    "*.fls",
    "*.log",
    "*.out",
    "*.run.xml",
    "*.synctex.gz",
    "*.toc",
    "*.pdf"
  ],

  "latex-workshop.view.pdf.viewer": "tab",

  "latex-workshop.formatting.latex": "latexindent",
  "latex-workshop.formatting.latexindent.path": "latexindent",
  "latex-workshop.latexindent.modifyLineBreaks": true
}